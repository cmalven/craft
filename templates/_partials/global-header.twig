{# Global Header
{# =============================================================== #}
{#
  {% include '_partials/global-header' %}
#}

<header class="global-header">
  <div class="global-header__inner">

    {# Logo #}
    <div class="global-header__logo">

    </div>

    {# Nav #}
    <div class="global-header__nav">
      {# Full Nav #}
      <div class="global-header__nav-full">
        {{ craft.navigation.render('primary') }}
      </div>

      {# Mobile Nav #}
      <div class="global-header__nav-mobile">
        {# Toggle #}
        <div class="global-header__toggle">
          {% include '_partials/global-nav-toggle' with {
            label: 'Menu',
            action: 'open',
            key: 'dialog-global-nav',
          } %}
        </div>
      </div>
    </div>

  </div>
</header>

{# Dialog #}
{% include '_partials/dialog-global-nav' with {
  key: 'dialog-global-nav',
} only %}

