{% set classes = craft.twig.modifiers('tab-panel', modifiers ?? []) %}
{% set id = label | kebab %}

<div
  class="l-tab-panel {{ classes }}"
  id="tabpanel-{{ id }}"
  role="tabpanel"
  tabindex="0"
  aria-labelledby="tab-{{ id }}"
  {% if not loop.first %}
    class="is-hidden"
  {% endif %}
  data-module-tab-panel="{{ key }}"
>
  {% block content %}{% endblock %}
</div>
