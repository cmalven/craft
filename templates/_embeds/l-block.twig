{% set modifierClasses = craft.twig.modifiers('l-block', modifiers ?? []) %}

<section class="l-block  {{ modifierClasses }} {{ classes ?? '' }}">
  {% if id ?? null %}
    {% include '_partials/anchor' with {
      id: id,
    } only %}
  {% endif %}

  <div class="l-block__inner">
    {% block content %}{% endblock %}
  </div>
</section>
