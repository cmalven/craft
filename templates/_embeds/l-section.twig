{% set modifierClasses = craft.twig.modifiers('l-section', modifiers ?? []) %}

<section class="l-section  {{ modifierClasses }} {{ classes ?? '' }}">
  {% if id ?? null %}
    {% include '_partials/anchor' with {
      id: id,
    } only %}
  {% endif %}

  <div class="l-section__inner">
    {% block content %}{% endblock %}
  </div>
</section>
